<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" maxHeight="900.0" maxWidth="1200.0" minHeight="900.0" minWidth="1200.0" prefHeight="900.0" prefWidth="1200.0" stylesheets="@assets/css/Home.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomePageController">
    <BorderPane prefHeight="900.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Header -->
        <top>
            <HBox styleClass="hbox-header">
                <!-- Logo Image -->
                <ImageView fitHeight="40" fitWidth="40" styleClass="logo" />
                <Label styleClass="label-title" text="Smart City" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button styleClass="button-header" text="⚙️" />
                <Button styleClass="button-header" text="👤" />
            </HBox>
        </top>

        <!-- Sidebar -->
        <left>
            <VBox styleClass="vbox-sidebar">
                <Button styleClass="button-sidebar" text="🏠 Dashboard" />
                <Button styleClass="button-sidebar" text="👥 Utilisateurs" />
                <Button styleClass="button-sidebar" text="💰 Finances" />
                <Button styleClass="button-sidebar" text="💡 Éclairage" />
                <Button styleClass="button-sidebar" text="🗑️ Déchets" />
                <Button styleClass="button-sidebar" text="📄 Documents" />
                <Button styleClass="button-sidebar" text="⚠️ Incidents" />
            </VBox>
        </left>

        <!-- Main Content -->
        <center>
            <StackPane styleClass="stackpane-main">
                <Label styleClass="label-main" text="Bienvenue à Smart City" />
            </StackPane>
        </center>

        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" styleClass="hbox-footer">
                <Label styleClass="label-footer" text="© 2025 Smart City - Tous droits réservés" />
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
