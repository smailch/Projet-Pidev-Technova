<AnchorPane maxHeight="720" maxWidth="1280" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-radius: 15 15 0 0;" stylesheets="@assets/css/Stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
