         <HBox spacing="9" style="-fx-padding: 4 0;">
            <ImageView fx:id="incidentsIcon" fitHeight="18" fitWidth="18" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/images/alarm.png" />
