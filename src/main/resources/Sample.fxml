            <Label fx:id="paperassesLabel" style="-fx-font-size: 17; -fx-text-fill: white; -fx-font-family: 'Berlin Sans FB';" text="Paperasses" />
         </HBox>
      </VBox>

      <HBox spacing="9" style="-fx-padding: 9; -fx-alignment: CENTER;">
         <Label style="-fx-font-size: 17; -fx-text-fill: white; -fx-font-family: 'Berlin Sans FB';" text="Profile" />
         <Button fx:id="profileButton" style="-fx-background-color: transparent; -fx-padding: 9;">
            <graphic>
               <ImageView fx:id="profilePic" fitHeight="36" fitWidth="36" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@assets/images/profile.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </HBox>

      <!-- Logout Button -->
      <Button alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to right, #e53935, #f44336);                      -fx-text-fill: white;                      -fx-font-size: 17;                      -fx-padding: 9;                      -fx-font-family: 'Segoe UI';                      -fx-background-radius: 23;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0.0, 0, 2);" text="Logout" />
   </VBox>

   <VBox fx:id="rightPanel" alignment="CENTER" layoutX="266.0" layoutY="103.0" prefHeight="607.0" prefWidth="1000.0" spacing="10" style="-fx-background-radius: 10px; -fx-border-color: #ccc; -fx-border-radius: 10px; -fx-background-color: white; -fx-padding: 15px;">
